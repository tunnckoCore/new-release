{
  "name": "new-release",
  "version": "0.0.0-semantic-release",
  "description": "A stable alternative to [semantic-release][]. Only handles NPM publishing and nothing more. For creating GitHub releases use the Semantic Release GitHub App",
  "repository": "tunnckoCore/new-release",
  "author": "Charlike Mike Reagent (https://i.am.charlike.online)",
  "nspId": "12907c4a-78a2-41d7-a430-49396e68b9cd",
  "main": "./src/index.js",
  "scripts": {
    "test": "NODE_ENV=test yarn hela test",
    "precommit": "yarn hela precommit",
    "commit": "yarn hela commit",
    "prepublishOnly": "yarn hela protect",
    "release": "./src/cli.js"
  },
  "license": "Apache-2.0",
  "licenseStart": 2017,
  "engines": {
    "node": ">=8",
    "npm": ">=5",
    "yarn": ">=1"
  },
  "files": [
    "src/"
  ],
  "bin": {
    "new-release": "./src/cli.js"
  },
  "dependencies": {
    "detect-next-version": "3.0.1",
    "execa-pro": "1.1.1",
    "is-ci": "1.2.1",
    "latest-version": "4.0.0",
    "minimist": "1.2.0",
    "parse-git-log": "0.2.1",
    "semver": "5.6.0"
  },
  "devDependencies": {
    "eslint": "5.9.0",
    "eslint-config-tunnckocore": "0.3.0",
    "hela": "2.0.10",
    "hela-config-tunnckocore": "2.2.45",
    "mukla": "0.4.9"
  },
  "keywords": [
    "automation"
  ],
  "verb": {
    "run": true,
    "toc": {
      "render": true,
      "method": "preWrite",
      "maxdepth": 3
    },
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "related": {
      "list": [
        "dush",
        "p-map-series",
        "execa",
        "hela",
        "mri"
      ],
      "highlight": "execa"
    },
    "lint": {
      "reflinks": true
    },
    "reflinks": [
      "hela",
      "semantic-release"
    ]
  }
}
